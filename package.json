{
  "name": "workwith-app",
  "version": "1.0.0",
  "description": "WorkWith - Task Management Application with Notion Integration",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:prod": "cross-env NODE_ENV=production electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win-portable": "npm run build && electron-builder --win portable",
    "dist:win-nsis": "npm run build && electron-builder --win nsis"
  },
  "keywords": [
    "electron",
    "vite",
    "javascript",
    "task-management",
    "notion",
    "productivity"
  ],
  "author": "WorkWith Team",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.9.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.1.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "vite": "^7.1.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.workwith.app",
    "productName": "WorkWith",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "service/**/*",
      "package.json",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "assets/notion-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WorkWith",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
